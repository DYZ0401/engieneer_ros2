<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="engineer">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import engineer urdf file -->
    <xacro:include filename="$(find engineer_description)/urdf/engineer.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="engineer.ros2_control.xacro" />


    <xacro:engineer_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
